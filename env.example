# Configurações do ESP8266 DHT22 Monitor
# Copie este arquivo para .env e configure suas variáveis

# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================
FLASK_ENV=production
SECRET_KEY=sua_chave_secreta_muito_segura_aqui
DATABASE_URL=sqlite:///app/database/sensor_data.db

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
API_KEY=sua_api_key_para_esp8266_aqui
JWT_SECRET_KEY=sua_jwt_secret_key_aqui

# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================
# Para SQLite (desenvolvimento)
DATABASE_URL=sqlite:///app/database/sensor_data.db

# Para PostgreSQL (produção)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/esp8266_monitor
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=esp8266_monitor
# DB_USER=esp8266_user
# DB_PASSWORD=senha_do_banco

# ===========================================
# CONFIGURAÇÕES DE REDE
# ===========================================
HOST=0.0.0.0
PORT=5005
DEBUG=false

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=app/logs/app.log
MAX_LOG_SIZE=10485760  # 10MB
BACKUP_COUNT=5

# ===========================================
# CONFIGURAÇÕES DE CACHE
# ===========================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300  # 5 minutos

# ===========================================
# CONFIGURAÇÕES DE EMAIL (Futuro)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_do_email
SMTP_TLS=true

# ===========================================
# CONFIGURAÇÕES DE ALERTAS
# ===========================================
TEMP_MIN=0.0
TEMP_MAX=50.0
HUMIDITY_MIN=0.0
HUMIDITY_MAX=100.0
ALERT_EMAIL=admin@exemplo.com

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24  # horas
BACKUP_RETENTION=30  # dias
BACKUP_PATH=/app/backups

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================
HEALTH_CHECK_INTERVAL=30  # segundos
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ===========================================
# CONFIGURAÇÕES DE SSL/TLS
# ===========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_ENABLED=true

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # segundos

# ===========================================
# CONFIGURAÇÕES DE CORS
# ===========================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5005
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# ===========================================
# CONFIGURAÇÕES DE DOCKER
# ===========================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE=renaneunao/esp8266-dht22
DOCKER_TAG=latest

# ===========================================
# CONFIGURAÇÕES DE DEPLOY
# ===========================================
DEPLOY_ENVIRONMENT=production
DEPLOY_HOST=194.163.142.108
DEPLOY_PORT=5005
DEPLOY_USER=deploy
DEPLOY_KEY_PATH=/path/to/private/key
